{
  "manifest_version": 3,
  "name": "Youtube Bookmarker",
  "description": "Bookmark YouTube videos with timestamped notes and organize them for later viewing.",
  "version": "1.0",
  "permissions": ["storage", "tabs", "scripting", "activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "https://www.youtube.com/*"
  ]
}
